<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs')%>

    <body>
        <%- include('partials/header.ejs')%>
            <div class="tituloPerfil">
                <h1>Tu Perfil</h1>
            </div>

            <Section class="sec-user">

                <div class="cont_imgProf">
                    <img class="img-userProf" alt='casco' src=<%= user.img_user %>></img>

                    <h2 class="text-userProf">
                        <%= user.first_name %>
                            <%= user.last_name %>
                    </h2>

                    <label class="etiqueta" for="nombre">Correo Electrónico</label>
                    <div class="div-text">
                        <h2 class="text-userProf">
                            <%= user.email %>
                        </h2>
                    </div>


                    <label class="etiqueta" for="nombre">Tipo</label>
                    <div class="div-text">
                        <h2 class="text-userProf">
                            <%= user.tipoUsuario.user_type %>
                        </h2>
                    </div>

                    <br />

                    <div class="contButton">
                        <form action="/<%= user.id %>/editar" method="GET">
                            <button class="submit-btn" type="submit">Editar</button>
                        </form>
                        <form action="/<%= user.id%>/delete?_method=DELETE" method="POST">
                            <button class="submit-btn" type="submit">Eliminar</button>
                        </form>
                        <form>
                            <button class="logout" type="submit"><a href="/logout/" style="text-decoration:none;">Cerrar
                                    sesión</a></button>
                        </form>
                    </div>

                </div>

            </Section>
            <%- include('partials/footer.ejs')%>
    </body>

</html>