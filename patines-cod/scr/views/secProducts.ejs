<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs')%>
    <%- include('partials/header.ejs')%>
    <body>
        <main>
        <h1 id="products-titulo">Productos lista avanzada</h1>
        <div class="container">

            <!-- Tabla de marcas -->

            <h1>Marcas</h1>
            
            <table class="table table-1">
                <thead>
                    <th>id</th>
                <th>Marca</th>
                <th>Editar</th>
                <th>Eliminar</th>
                </thead>
                <% for(let i = 0; i < marcas.length; i ++) { %>
                <tbody>
                    <tr>
                        <td><%=marcas[i].id%></td>
                        <td><%=marcas[i].name_brand%></td>
                        <td><a href="/products/secProducts/<%=marcas[i].id%>/editBrand"><button class="sec-delete"><i class="fas fa-pen" id="edit"></i></button></td>
                        <td> <form action="/products/secProducts/deleteBrand/<%= marcas[i].id%>?_method=DELETE"
                            method="POST"><button class="sec-delete"><i class="fas fa-trash" id="delete"></i></button></td>
                        </form>
                    </tr>
                </tbody>
                <% } %>
                <td></td>
                    </table>

                    <!-- Formulario agregar marcas-->

                    <h1 id="products-title-brand">Crear marca</h1>
                    <form action="/products/secProducts/createBrand" method="POST">
                      <div class="div-input">
                            <label for="marca">Marca</label>
                            <input type="text" name="marca" class="login-data" required>
                            </div>
                            <button type="submit" class="submit-btn">Agregar marca</button>
                    </form>

                   <!-- Tabla de categorías -->

                   <h1>Categorías</h1>

            <table class="table table-1">
                <thead>
                    <th>id</th>
                <th>Categoría</th>
                <th>Editar</th>
                <th>Eliminar</th>
                </thead>
                <% for(let i = 0; i < categorias.length; i ++) { %>
                <tbody>
                    <tr>
                        <td><%=categorias[i].id%></td>
                        <td><%=categorias[i].name_category%></td>
                        <td><a href="/products/secProducts/<%=categorias[i].id%>/editCategory"><button class="sec-delete"><i class="fas fa-pen" id="edit"></i></button></td>
                        <td> <form action="/products/secProducts/deleteCategory/<%= categorias[i].id%>?_method=DELETE"
                            method="POST"><button class="sec-delete" class="submit-btn"><i class="fas fa-trash" id="delete"></i></td>
                        </form>
                </tbody>
                <% } %>
                <td></td>
            </table>

             <!-- Formulario agregar categorías-->

            <h1 id="products-title-category">Crear categoría</h1>
            <form action="/products/secProducts/createCategory" method="POST">
                <div class="div-input">
                    <label for="categoria">Categoría</label>
                    <input type="text" name="categoria" class="login-data" required>
                    </div>
                    <button type="submit" class="submit-btn">Agregar categoría</button>
            </form>

                      <!-- Tabla de colores -->

                   <h1>Colores</h1>

                   <table class="table table-1">
                       <thead>
                           <th>id</th>
                       <th>Color</th>
                       <th>Editar</th>
                       <th>Eliminar</th>
                       </thead>
                       <% for(let i = 0; i < color.length; i ++) { %>
                       <tbody>
                           <tr>
                               <td><%=color[i].id%></td>
                               <td><%=color[i].color%></td>
                               <td><form action="/products/secProducts/<%=color[i].id%>/editColor" method="GET"><button class="sec-delete"><i class="fas fa-pen" id="edit"></i></button></td></form>
                               <td> <form action="/products/secProducts/deleteColor/<%= color[i].id%>?_method=DELETE"
                                method="POST"><button class="sec-delete"><i class="fas fa-trash" id="delete"></i></td>
                            </form>
                           </tr>
                       </tbody>
                       <% } %>
                   </table>

                   <!-- Formulario agregar color-->

                   <h1 id="products-title-color">Crear color</h1>
                   <form action="/products/secProducts/createColor" method="POST">
                    <div class="div-input">
                           <label for="color">Color</label>
                           <input type="text" name="color" class="login-data" required>
                           </div>
                           <button type="submit" class="submit-btn">Agregar color</button>
                   </form>
                   <br>
                   </div>
                   
                </main>
    </body>
    <%- include('partials/footer.ejs')%>
</html>       

